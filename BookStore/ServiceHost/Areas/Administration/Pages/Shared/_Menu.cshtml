@using _0_Framework.Infrastucture
@inject _0_Framework.Application.IAuthHelper AuthHelper;
@{
    var currentAccount = AuthHelper.CurrentAccountInfo();
}

<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-right">
                <img src="~/Theme/assets/img/usericon.png" alt="" class="thumb-md img-circle">
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@currentAccount.Fullname</a>
                </div>

                <p class="text-muted m-0">@currentAccount.Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="/Index" class="waves-effect active"><i class="fa fa-dashboard"></i><span> داشبورد </span></a>
                </li>

                <li>
                    <a asp-page="/Comments/Index" class="waves-effect"><i class="fa fa-comments"></i><span> کامنت ها </span></a>
                </li>



                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li>
                        <a asp-page="/Inventory/Index" class="waves-effect"><i class="md md-home"></i><span> انبارداری </span></a>
                    </li>

                    <li class="has_sub">
                        <a class="waves-effect"><i class="fa fa-users"></i><span> سیستم کاربران </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Accounts/Account/Index">کاربران</a></li>
                            <li><a asp-page="/Accounts/Role/Index">نقش ها</a></li>
                        </ul>
                    </li>

                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-home"></i><span> فروشگاه </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Shop/Slides/Index">اسلایدر</a></li>
                            <li><a asp-page="/Shop/ProductCategory/Index">گروه کتاب ها</a></li>
                            <li><a asp-page="/Shop/Products/Index">کتاب ها</a></li>
                            <li><a asp-page="/Shop/Productpictures/Index">عکس کتاب ها</a></li>
                        </ul>
                    </li>

                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-home"></i><span> سیستم تخفیفات </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Discounts/CustomerDiscounts/Index">تخفیف مشتری</a></li>
                            <li><a asp-page="/Discounts/ColleagueDiscounts/Index">تخفیف همکاری</a></li>
                        </ul>
                    </li>
                }
                <li class="has_sub">
                    <a class="waves-effect"><i class="fa fa-newspaper-o"></i><span> سیستم بلاگینگ </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Blog/ArticleCategories/Index">گروه مقالات</a></li>
                        <li><a asp-page="/Blog/Articles/Index">مقالات</a></li>
                    </ul>
                </li>

                <li>
                    <a asp-page="/Login" asp-page-handler="Logout" class="waves-effect active"><i class="fa fa-sign-out"></i><span> خروج </span></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>