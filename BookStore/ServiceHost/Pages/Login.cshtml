@page
@inject _0_Framework.Application.IAuthHelper AuthHelper
@model ServiceHost.Pages.LoginModel
@{
    ViewData["Title"] = "ورود";
}


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                @if (AuthHelper.IsAuthenticated())
                                {
                                    <a asp-page="/Index">صفحه اصلی</a>
                                }
                                else
                                {
                                     <a>صفحه اصلی</a>
                                }
                               
                            </li>
                            <li class="active">ورود</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">

                                @if (Model.MessageT != null)
                                {
                                    if(Model.MessageT == "ok") 
                                    {
                                        <div class="alert alert-success">
                                            <a asp-page="/Index">برای ورود به صفحه اصلی کلیک کنید.</a>
                                        </div>
                                    }
                                    if(Model.MessageT != "ok")
                                    {
                                        <div class="alert alert-danger">@Model.MessageT</div>
                                    }
                                }

                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="نام کاربری">
                                            </div>
                                            <div class="col-12">
                                                <label>کلمه عبور</label>
                                                <input type="password" name="password" placeholder="کلمه عبور">
                                            </div>

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link">کلمه عبور را فراموش کرده اید؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
